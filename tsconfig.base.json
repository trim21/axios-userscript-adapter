{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "lib": ["dom"],
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": false,
    "stripInternal": true,
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"],
  "exclude": ["./dist"]
}
